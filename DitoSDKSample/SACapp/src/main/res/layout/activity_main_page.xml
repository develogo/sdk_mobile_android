<ioasys.com.br.sacapp.helperClasses.MyScrollView
    android:id="@+id/scrollView"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context="ioasys.com.br.sacapp.activities.MainPage">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_padrao"/>

            <TextView
                android:id="@+id/data_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Dadosdachamada"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_title"
                android:layout_margin="15dp"
                android:layout_below="@+id/toolbar"
                />

            <TableLayout
                android:id="@+id/data_layout"
                android:paddingLeft="15dp"
                android:layout_below="@+id/data_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/txt_color_standard"
                        android:textSize="@dimen/txt_body"
                        android:text="@string/client" />

                    <TextView
                        android:textColor="@color/txt_color_standard"
                        android:textSize="@dimen/txt_body"
                        android:text="Ana maria consuelo"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/txt_color_standard"
                        android:textSize="@dimen/txt_body"
                        android:text="@string/card" />

                    <TextView
                        android:textColor="@color/txt_color_standard"
                        android:textSize="@dimen/txt_body"
                        android:text="xxx.xxx.xxx.2334"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/txt_color_standard"
                        android:textSize="@dimen/txt_body"
                        android:paddingRight="5dp"
                        android:text="@string/navigation"/>

                    <TextView
                        android:textColor="@color/txt_color_standard"
                        android:textSize="@dimen/txt_body"
                        android:text="Saldo/extrato"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/txt_color_standard"
                        android:textSize="@dimen/txt_body"
                        android:text="@string/reason"/>

                    <TextView
                        android:textColor="@color/txt_color_standard"
                        android:textSize="@dimen/txt_body"
                        android:text="@string/soliciatar_aumento"/>
                </TableRow>
            </TableLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demo_app"
                android:background="@drawable/rounded_txt"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:id="@+id/logo"
                android:layout_margin="10dp"
                android:layout_below="@+id/toolbar"
                />

            <LinearLayout
                android:id="@+id/time"
                android:layout_below="@+id/data_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <ImageView
                    android:id="@+id/watch_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/clock"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/expected_waiting_time"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/txt_color_standard"
                            android:textSize="@dimen/txt_body"
                            android:text="@string/expected_waiting_time"
                            android:layout_marginRight="3dp"
                            />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/txt_color_standard"
                            android:textSize="@dimen/txt_body"
                            android:text="1 minuto"
                            android:layout_toRightOf="@+id/expected_waiting_time"
                            />

                        <TextView
                            android:id="@+id/best_time_call"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/txt_color_standard"
                            android:textSize="@dimen/txt_body"
                            android:text="@string/best_time_call"
                            android:layout_below="@+id/expected_waiting_time"
                            android:layout_marginRight="3dp"
                            />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/txt_color_standard"
                            android:textSize="@dimen/txt_body"
                            android:text="das 15h Ã s 19h"
                            android:layout_toRightOf="@+id/best_time_call"
                            android:layout_below="@+id/expected_waiting_time"

                            />
                    </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/protocol_layout"
                android:layout_below="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/tic_tac_toe"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/clock"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/protocol"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/txt_color_standard"
                        android:textSize="@dimen/txt_body"
                        android:text="@string/protocol"
                        android:layout_marginRight="3dp"
                        />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/txt_color_standard"
                        android:textSize="@dimen/txt_body"
                        android:text="474374387"
                        android:layout_toRightOf="@+id/protocol"
                        />

                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/call_now"
                android:text="@string/call_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Custom_Button"
                android:textAllCaps="false"
                android:layout_marginBottom="3dp"
                android:layout_below="@+id/protocol_layout"
                android:layout_marginTop="15dp"
                />

            <Button
                android:id="@+id/call_later"
                android:text="@string/call_later"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Custom_Button"
                android:textAllCaps="false"
                android:layout_marginBottom="3dp"
                android:layout_below="@+id/call_now"
                />

            <Button
                android:id="@+id/chat"
                android:text="@string/chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Custom_Button"
                android:textAllCaps="false"
                android:layout_marginBottom="3dp"
                android:layout_below="@+id/call_later"
                />

            <Button
                android:id="@+id/open_call"
                android:text="@string/open_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Custom_Button"
                android:textAllCaps="false"
                android:layout_marginBottom="3dp"
                android:layout_below="@+id/chat"
                />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/open_call"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/attendance_time"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color_standard"
                    android:textSize="@dimen/txt_body"
                    android:text="@string/attendance_time"
                    android:layout_marginRight="3dp"
                    android:layout_below="@+id/open_call"
                    />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/txt_color_standard"
                    android:textSize="@dimen/txt_body"
                    android:text="segunda a sexta das 08h Ã s 22h"
                    />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/txt_color_standard"
                    android:textSize="@dimen/txt_body"
                    android:text="SÃ¡bados e feriados 08 Ã s 20h"
                    />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/txt_color_standard"
                    android:textSize="@dimen/txt_body"
                    android:text="Domingos 10h Ã s 19h"
                    />


                <TextView
                    android:id="@+id/region"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color_standard"
                    android:textSize="@dimen/txt_body"
                    android:text="@string/capital_metropolitan_region"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/open_call"
                    />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/txt_color_standard"
                    android:textSize="@dimen/txt_body"
                    android:text="Custo da ligaÃ§Ã£o local mais impostos"
                    />


                <TextView
                    android:id="@+id/other_region"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color_standard"
                    android:textSize="@dimen/txt_body"
                    android:text="@string/others_region"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/open_call"
                    />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/txt_color_standard"
                    android:textSize="@dimen/txt_body"
                    android:text="Custo de ligaÃ§Ã£o interubada p/ SÃ£o Paulo."
                    android:layout_marginBottom="15dp"
                    />
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/powered_by"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/powered_by"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@color/blind_blue"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/second_layout"
            />

    </RelativeLayout>
</ioasys.com.br.sacapp.helperClasses.MyScrollView>