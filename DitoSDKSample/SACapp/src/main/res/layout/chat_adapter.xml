<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_weight="1"
            android:id="@+id/img_response"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/headset"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olá Carla, bom dia! Meu nome é Albertosal"
            android:background="@drawable/rounded_response_chat"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:textColor="#91A2C6"
            android:textStyle="bold"
            android:textSize="@dimen/txt_body"
            android:layout_toRightOf="@+id/img_response"
            android:id="@+id/msg"
            android:layout_weight="2"
            />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/clock"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/img_sending"
            android:layout_toRightOf="@+id/msg"
            android:layout_weight="1"
            android:visibility="visible"
            />


    </LinearLayout>
</RelativeLayout>